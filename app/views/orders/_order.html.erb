<% if product = Product.find_by(id: @line_item.product_id) %>
  <% order_total = product.price * @line_item.quantity %>
  <% @order_total += order_total %>

   <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <h4><%= product.name %></h4>
      <br>
      <p><%= product.description %></p>
    </td>
    <td>
      <%= @line_item.quantity %>
    </td>

    <td>
      <%= order_total %>
    </td>
  </tr>
<% end %>